{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["node_modules/@types", "typings"],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@chrome/*": ["./chrome/*"],
      "@backend/*": ["../yttrex-backend/backend/*"]
    }
  },
  "include": ["./src"],
  "references": [
    {
      "path": "./yttrex-backend/backend"
    }
  ]
}
