{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "paths": {
      "@chrome/*": ["./chrome/*"],
      "@backend/*": ["../yttrex-backend/backend/*"]
    }
  },
  "include": ["."],
  "exclude": [
    "./public/**",
    "**/node_modules/**",
    "./yttrex-backend/**",
    "./build/**"
  ]
}
