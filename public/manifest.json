{
  "manifest_version": 2,

  "name": "YouChoose.AI",
  "short_name": "YCAI",

  "description": "Content creator should control their videos' recommendation",
  "author": "Tracking Exposed team, check it our on https://youchoose.ai",

  "icons": {
    "16": "ycai16.png",
    "48": "ycai48.png",
    "128": "ycai128.png"
  },

  "browser_action": {
    "default_icon": "ycai16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "alarms",
    "http://localhost:9000/",
    "https://*.youtube.com/",
    "https://youchoose.tracking.exposed/",
    "https://yt3.ggpht.com/"
  ],

  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },

  "background": {
    "scripts": ["./background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://*.youtube.com/*"
      ],
      "js": ["./app.js"],
      "css": ["./css/font.css", "./css/popup.css", "./css/dashboard.css"]
    }
  ],
  "web_accessible_resources": ["*.png", "./css/**"]
}
